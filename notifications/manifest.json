{
  "manifest_version": 2,
  "name": "Outlook Notification for Folders",
  "version": "1.0",
  "description": "Shows off desktop notifications, for folders configured in Outlook Web.",
  "author": "Nitin Sasi & Rajit Juyal",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://outlook.office365.com/mail/*",
	"https://outlook.office.com/mail/*",
    "storage"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "48.png"
  ]
}